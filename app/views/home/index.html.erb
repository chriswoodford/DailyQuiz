<div class="row" id="home">
  
  <div class="span12">
    
    <h1>Daily Quiz</h1>
    
  </div>

  <div class="span8">
    
    <ul>
      
      <li>
        <i class="icon-globe"></i> 
        Today's topic is: <%= @daily_quiz.quiz_definition.category.name %> 
        (Difficulty: <%= @daily_quiz.quiz_definition.difficulty %> / 5)
      </li>
      <li><i class="icon-time"></i> Today's game ends in: <%= distance_of_time_in_words_to_now(DateTime.tomorrow, ) %></li>
      <li><i class="icon-user"></i> <%= @daily_quiz.quizzes.count %> players have played so far</li>
      
    </ul>
    
  </div>
  
  <div class="span4">
    
    <% if signed_in? %>
    <a href="<%= url_for :controller => 'quiz', :action => 'index' %>" class="btn btn-large btn-block btn-primary">Play Now!</a>
    <% else %>
    <a href="#login" role="button" data-toggle="modal" class="btn btn-large btn-block btn-primary">Play Now!</a>
    <% end %>
    
  </div>
  
</div>

<div class="row">
  
  <div class="span12">
    
    <h1>Today's Scores</h1>
    
    <table class="table table-striped">
      
      <thead>
        
        <tr>
          <th>Player</th>
          <th>Correct</th>
          <th>Time (s)</th>
          <th>Score</th>
        </tr>
        
      </thead>
      <tfoot></tfoot>
      
      <tbody>
        
        <% @daily_quiz.quizzes.each do |quiz| %>
        <tr>
          <td><%= quiz.player.name %></td>
          <td><%= quiz.correct_answers.count %></td>
          <td>95</td>
          <td>805</td>
        </tr>
        <% end %>
        
      </tbody>
      
    </table>
    
  </div>
  
</div>

