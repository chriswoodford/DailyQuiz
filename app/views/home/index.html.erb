</div>

<div class="row">
 
  <div class="span6">
    
    <h2>Today's Team Standings</h2>
    
    <% if @daily_quiz %>
    <ol>
      
      <% @teams.each do |t| %>
        <% next if !t.has_played_today? %>
      <li><%= t.name %> - <%= t.points %> pts</li>
      <% end %>
      
    </ol>
    <% else %>
    <div class="alert alert-info">Oops! There's no quiz today</div> 
    <% end %>
    
  </div>
 
  <div class="span6">
    
    <h2>Get in on the Action!</h2>
    
    <p>
      Lorem ipsum dolar sit amet. 
    </p>
    
    <%= link_to "Create a Team", signup_path, class: "btn btn-large btn-info" %>
    
  </div>
  
</div>
